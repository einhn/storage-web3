generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             BigInt          @id @default(autoincrement())
  oauthProvider  String?         @default("google") // "google" | "github" | "kakao" 같은 값
  oauthId        String?         // provider 쪽 user id
  walletAddress  String?         @unique
  walletJson     String?         // ethers.js encrypted JSON wallet

  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @default(now()) @updatedAt

  usageSnapshots UsageSnapshot[]
  userFiles      UserFile[]
}

model UsageSnapshot {
  id            BigInt   @id @default(autoincrement())
  user          User     @relation(fields: [userId], references: [id])
  userId        BigInt

  year          Int
  month         Int

  totalBytes    BigInt
  billedAmount  Decimal

  snapshotHash  String   // 0x...dead

  commitTxHash  String?
  commitBlock   BigInt?

  settleTxHash  String?
  settleBlock   BigInt?

  paid          Boolean  @default(false)

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([userId, year, month])
}

model File {
  id        BigInt   @id @default(autoincrement())
  cid       String   @unique          // IPFS CID
  phash     String                    // 예: 64비트 hex
  size      BigInt                    // 바이트
  groupId   BigInt?                   // 유사 이미지 그룹 (리더 파일 id)

  // 역참조: 어떤 유저들이 이 파일을 참조하는지
  userFiles UserFile[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserFile {
  id         BigInt   @id @default(autoincrement())
  user       User     @relation(fields: [userId], references: [id])
  userId     BigInt

  file       File     @relation(fields: [fileId], references: [id])
  fileId     BigInt

  uploadedAt DateTime @default(now())

  @@unique([userId, fileId])
}